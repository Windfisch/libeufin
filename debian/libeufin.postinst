#!/bin/bash

set -e

case "${1}" in
  configure)
    if ! id libeufin &> /dev/null; then useradd --no-create-home --system libeufin; fi
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`${1}'" >&2
    exit 1
    ;;
esac

#DEBHELPER#

exit 0
